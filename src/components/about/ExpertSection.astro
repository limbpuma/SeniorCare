---
interface Props {
  subtitle: string;
  title: string;
  description: string;
  listItems: string[];
  buttonText: string;
  buttonLink: string;
  mainImage: string;
  overlayImage: string;
}

const {
  subtitle,
  title,
  description,
  listItems,
  buttonText,
  buttonLink,
  mainImage,
  overlayImage
} = Astro.props;
---

<section class="bg-gray-100 py-16">
  <div class="container mx-auto px-4 max-w-screen-xl">
    <div class="flex flex-col lg:flex-row items-center lg:items-start">
      
      <div class="w-full lg:w-1/2 lg:pr-8 mb-8 lg:mb-0">
        <h3 class="text-deep-blue text-ag-sub-heading font-ag-sub-heading mb-2">{subtitle}</h3>
        <h2 class="text-ag-h3 font-ag-h3 mb-4">{title}</h2>
        <p class="text-gray-600 text-ag-body-text font-ag-body-text mb-6">{description}</p>
        <ul class="space-y-2 mb-8">
          {listItems.map((item) => (
            <li class="flex items-center font-list-text text-list-text">
              <svg class="w-5 h-5 text-blue-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span>{item}</span>
            </li>
          ))}
        </ul>
        <div class="flex flex-wrap items-center">
          <a href={buttonLink} class="bg-blue-600 text-white px-6 py-2 rounded-full font-semibold mr-4 hover:bg-blue-700 transition duration-300 mb-2 sm:mb-0">
            {buttonText}
          </a>
          <a href="#" class="text-blue-600 font-semibold flex items-center hover:underline">
            How To Apply
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
      
      <div class="w-full lg:w-1/2 relative">
        <div class="relative">
          <img src={mainImage} alt="Main Image" class="w-full rounded-lg shadow-lg"/>
          <img 
            src={overlayImage} 
            alt="Overlay Image" 
            class="absolute bottom-0 right-0 w-2/3 rounded-lg shadow-lg border-4 border-white transform translate-y-1/4 translate-x-1/6"
          />
        </div>
      </div>
    </div>
  </div>
</section>