---
import ReactSwiperSlider from './Slider.jsx';

const images = [
  { src: '/assets/img/Bild1.jpg', alt: 'Image 1', description: 'Assisted Living' },
  { src: '/assets/img/Bild1.jpg', alt: 'Image 2', description: 'Healthcare Services' },
  { src: '/assets/img/Bild1.jpg', alt: 'Image 3', description: 'Meal Services' },
  { src: '/assets/img/Bild1.jpg', alt: 'Image 4', description: 'Housekeeping' },
  { src: '/assets/img/Bild1.jpg', alt: 'Image 5', description: 'Memory Care' },
];

const title = "What We Offer";
const subtitle = "We Take Care Senior Persons";
const imageClasses = "w-32 h-32 lg:w-32 lg:h-32 object-cover mb-4 rounded";
---

<section class="py-12 sm:py-16 bg-white">
  <div class="container mx-auto w-full max-w-screen-xl px-4 lg:px-8">
    <div class="text-center mb-8">
      <h2 class="text-deep-blue font-ag-h2 text-ag-h2">{title}</h2>
      <p class="text-gray-600 text-ag-body-text font-ag-body-text">{subtitle}</p>
    </div>
    <div class="w-full">
      <ReactSwiperSlider slides={images} isImageSlider={true} imageClasses={imageClasses} client:load />
    </div>
  </div>
</section>
