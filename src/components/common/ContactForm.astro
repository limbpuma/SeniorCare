---
import type { HTMLInputTypeAttribute } from "react";

interface inputInfo {
    name: string;
    type: HTMLInputElement["type"];
    placeholder: string;
}

const inputInfo: inputInfo[] = [
    {
        name: "Full Name",
        type: "text",
        placeholder: "Full Name",
    },
    {
        name: "Phone Number",
        type: "text",
        placeholder: "Phone Number",
    },
    {
        name: "Email",
        type: "email",
        placeholder: "Email Address",
    },
    {
        name: "Message",
        type: "text",
        placeholder: "Message",
    }
]
---

<form action="" class="bg-accent w-[703px] h-[875px] mx-auto my-12 p-10">
    <h2 class="font-ag-h4 text-ag-h4 text-primary text-center">Clarify your Queries <br/> Call Us Now!</h2>
    <div>
        {
            inputInfo.map((input) => {
                const { name, type, placeholder } = input;

                return (
                    <input type={type} placeholder={placeholder} class="w-full h-12 px-4 py-2 bg-inherit border-t-0 border-x-0 border-b border-primary  text-primary-dark focus:outline-none focus:border-accent" />
                )
            })
        }
        <input type="text" placeholder="Full Name" class="w-full h-12 px-4 py-2 bg-inherit border-t-0 border-x-0 border-b border-primary  text-primary-dark focus:outline-none focus:border-accent" />
    </div>
</form>
