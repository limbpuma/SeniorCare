---
const { socials = [], size = 'medium' } = Astro.props;

const sizes = {
  small: 'text-xs',
  medium: 'text-lg',
  large: 'text-xl'
};

const iconClass = sizes[size] || sizes.medium;

const iconMap = {
  facebook: 'fab fa-facebook-f',
  twitter: 'fab fa-twitter',
  instagram: 'fab fa-instagram',
  linkedin: 'fab fa-linkedin-in',
  youtube: 'fab fa-youtube',
  phone: 'fas fa-phone',
  mapMarker: 'fas fa-map-marker-alt',
  clock: 'fas fa-clock',
};
---

<div class="flex">
  {socials.map(social => (
    <i class={`${iconMap[social]} m-1 ${iconClass}`}></i>
  ))}
</div>
