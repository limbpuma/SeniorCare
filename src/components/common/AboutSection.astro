---
const stats = [
  { number: '12k', label: 'Seniors Helped' },
  { number: '69+', label: 'Seniors Helped' },
];

const services = [
  'Home Personal Care',
  'Health Center',
  'Active Aging Club Centre',
];
---

<section class="bg-deep-blue py-12 sm:py-16">
  <div class="container mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-8 text-white">
    <!-- Top Section with services and smiley icon -->
    <div class="flex flex-col lg:flex-row justify-between items-center mb-8 sm:mb-12">
      <div class="text-center lg:text-left lg:w-2/3">
        {services.map((service) => (
          <h2 class="text-ag-h4 sm:text-ag-h3 lg:text-ag-h2 font-ag-h2 mb-4 lg:mb-6">
            {service}
          </h2>
        ))}
      </div>
      <div class="mt-8 lg:mt-0 flex justify-center lg:justify-end items-center lg:w-1/3">
        <span class="bg-gray-blue h-16 w-16 sm:h-20 sm:w-20 lg:h-24 lg:w-24 rounded-full inline-block mr-4"></span>
        <span class="bg-soft-orange h-10 w-10 sm:h-12 sm:w-12 rounded-full flex justify-center items-center text-xl sm:text-2xl">
          ðŸ™‚
        </span>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-soft-blue mb-8 sm:mb-12"></div>

    <!-- Stats Section -->
    <div class="flex flex-col lg:flex-row justify-between items-center text-center lg:text-left">
      <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-8 mb-8 lg:mb-0">
        {stats.map(({ number, label }) => (
          <div>
            <p class="text-ag-h3 sm:text-ag-h2 lg:text-ag-h1 font-ag-h2">{number}</p>
            <p class="text-ag-body-text font-ag-body-text">{label}</p>
          </div>
        ))}
      </div>

      <!-- Appointment Button and Contact Info -->
      <div class="flex flex-col lg:flex-row items-center justify-center lg:justify-start lg:ml-12 space-y-4 lg:space-y-0 lg:space-x-4">
        <button class="bg-soft-orange text-deep-blue font-ag-button-text text-ag-button-text py-2 px-6 sm:px-8 rounded-full hover:bg-soft-blue transition">
          Book Appointment
        </button>
        <div class="flex items-center text-ag-body-text font-ag-body-text">
          <i class="fa fa-phone mr-2"></i>
          180 5545 6985
        </div>
      </div>
    </div>
  </div>
</section>
