---
import Section from "./Section.astro";
import TextBlock from "./TextBlock.astro";

interface Testimonial {
  name: string;
  title: string;
  image: string;
  desc: string;
}

interface Props {
  titlesection: string;
  subtitlesection: string;
  items: Testimonial[];
}

const { titlesection, subtitlesection, items } = Astro.props;
---

<Section
  background="white"
  padding="large"
  width="full"
  height="auto"
  id="experience-section"
  animation="fade-in"
>
  <div class="text-center mb-12">
    <TextBlock
      subtitle={subtitlesection}
      title={titlesection}
      alignment="center"
      textColor="text-deep-blue"
    />
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
    {
      items.map((testimonial) => (
        <div class="bg-white border-soft-orange p-6 rounded-lg shadow-md border h-full flex flex-col">
          <p class="text-ag-body-text font-ag-body-text italic text-deep-blue mb-4 flex-grow">
            {testimonial.desc}
          </p>
          <div class="flex items-center mt-4">
            <div class="flex-shrink-0 mr-4">
              <div class="relative w-16 h-16 sm:w-20 sm:h-20">
                <i class="fa-solid fa-quote-right text-ag-h3 text-deep-blue absolute -top-2 -left-2 z-10" />
                <img
                  src={testimonial.image}
                  alt={testimonial.name}
                  class="w-full h-full object-cover rounded-full"
                  loading="lazy"
                />
              </div>
            </div>
            <div>
              <h3 class="font-ag-sub-heading font-bold text-ag-sub-heading text-black">
                {testimonial.name}
              </h3>
              <p class="text-ag-body-text font-ag-body-text text-deep-blue">
                {testimonial.title}
              </p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Section>