---
import Button from "../common/Button.astro";

const { subtitle, title, description, city, buttonText, stats } = Astro.props;
---

<section class="bg-white py-12 sm:py-16">
  <div class="container mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-8 text-white">
    <div class="flex flex-col md:flex-row items-center">
      <div class="w-full md:w-3/5 lg:w-2/3 mb-8 md:mb-0">
        <img src="/assets/img/Bild1.jpg" alt="World map with location markers" class="w-full h-[450px] object-cover"/>
      </div>
      <div class="w-full md:w-2/5 lg:w-1/3 md:pl-8 p-4">
        <h2 class=" text-deep-blue text-ag-sub-heading font-ag-sub-heading mb-2">{subtitle}</h2>
        <h1 class="text-ag-h5 font-ag-h5 text-deep-blue mb-4">{title}</h1>
        <p class="text-deep-blue text-ag-body-text font-ag-body-text mb-4">{description}</p>
        <h3 class="text-ag-h5 font-ag-h5 text-deep-blue mb-4">{city}</h3>
        <Button class="hidden sm:flex" variant="primary" size="medium">
            {buttonText}
        </Button>
      </div>
    </div>

    <div class="bg-soft-orange p-12">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-2 text-center">
        {stats.map(stat => (
          <div class="grid grid-cols-2">
            <p class="text-ag-h3 font-ag-h3 text-blue-900">{stat.value}</p>
            <p class="text-ag-body-text font-ag-body-text text-black">{stat.label}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
