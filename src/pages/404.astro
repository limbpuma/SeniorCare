---
import Layout from "../layouts/Layout.astro";
import Section from "../components/common/Section.astro";
import TextBlock from "../components/common/TextBlock.astro";
import ParallaxMedia from "../components/common/ParallaxMedia.astro";
import seniorCoupleImage from "/public/assets/img/doctor_senior_care_help_6.webp";

interface Props {
  alignment?: 'left' | 'center' | 'right';

}

const { alignment = 'left' } = Astro.props;

---

<Layout title="404 - Page Not Found">
  <Section 
    padding="large"
    width="full"
    height="h-screen"
    id="hero-parallax-section"
    class="relative overflow-hidden "
  >
    <div class="absolute inset-0 w-full h-full parallax-container">
      <ParallaxMedia 
        type="image"
        src={seniorCoupleImage}
        alt="404 Error - Senior couple"
      />
    </div>
    <div class="relative z-10 container mx-auto h-full flex items-center justify-center lg:justify-start">
      <div class="w-full max-w-3xl lg:max-w-none lg:w-1/2 px-4 text-center lg:text-left">
        <TextBlock
          subtitle="Seite nicht gefunden"
          title="404"
          descriptionBold="Es tut uns leid, aber die gesuchte Seite konnte nicht gefunden werden"
          alignment={alignment}        
          textColor="white"
          buttonText="ZurÃ¼ck zur Startseite"
          buttonVariant="primary"
          buttonSize="medium"
          buttonHref="/"
        />
        
      </div>
    </div>
  </Section>
</Layout>